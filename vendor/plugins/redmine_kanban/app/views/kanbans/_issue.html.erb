<% if issue %>
<li id="issue_<%= issue.id %>" class="<%= over_pane_limit?(limit, issue_counter) if defined?(limit) -%> <%= kanban_issue_css_classes(issue) %>">
  <div class="issue-details">

    <div class="issue-details-header">
      <div class="icons">
        <%= issue_icon_link(issue) %>
        <%= call_hook(:view_kanbans_issue_details, :issue => issue) %>
        <%= issue_updated_note_icon(issue) %>
        <%= image_tag('fav.png') if issue.watched_by?(viewed_user) %>
      </div>
      <a href="<%= issue_url(issue) %>" class="issue-show-popup issue-id issue-id-<%= h(issue.id) %>">#<%= h(issue.id) %></a> - <%= h(issue.project.name) if issue.project %>
    </div>
    
    <div class="issue-details-body"><%= h(issue.subject) %></div>
  </div>
</li>
<% end %>
