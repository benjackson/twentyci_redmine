      <%= content_tag(:h3, l(:kanban_text_selected)) %>
      <ol id="selected-issues" class="<%= allowed_to_assign_staffed_issue_to(nil) -%>">
        <% if @kanban.selected_issues_for({}).empty? %>
        <%= render :partial => 'empty_issue' %>
        <% else %>
        <%= render(:partial => 'issue',
                   :collection => @kanban.selected_issues_for({}),
                   :locals => { :limit => Setting['plugin_redmine_kanban']["panes"]["selected"]["limit"].to_i }) %>
        <% end %>
      </ol>
